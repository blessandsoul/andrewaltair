# Andrew Altair - Environment Variables
# Copy this file to .env.local and fill in your values

# MongoDB Atlas connection string
# Get from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Groq API Key for AI features
# Get free key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# NextAuth Secret (generate random string)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# Base URL for your app
NEXTAUTH_URL=http://localhost:3000

# Admin Panel Security
# Generate a strong password for admin access
ADMIN_PASSWORD=your_secure_admin_password_2026!
# Generate with: openssl rand -base64 32
ADMIN_SESSION_SECRET=your_32_char_secret_for_session_signing

# Optional: Email configuration for notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password

# Google Analytics 4
# Get from: https://analytics.google.com
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Public Site URL (for sitemap and SEO)
NEXT_PUBLIC_SITE_URL=https://andrewaltair.ge
NEXT_PUBLIC_BASE_URL=http://localhost:3000
